/********** UPDATED FONT FAMILY************/

@font-face {
    font-family: 'Museo 300';
    src: url('https://cdn.shopify.com/s/files/1/0907/0569/0949/files/Museo-300.woff2?v=1738041463') format('woff2'),
        url('https://cdn.shopify.com/s/files/1/0907/0569/0949/files/Museo-300.woff?v=1738041463') format('woff');
    font-weight: 300;
    font-style: normal;
    font-display: swap;
}

@font-face {
    font-family: 'Museo 700';
    src: url('https://cdn.shopify.com/s/files/1/0907/0569/0949/files/Museo-700.woff2?v=1738041464') format('woff2'),
        url('https://cdn.shopify.com/s/files/1/0907/0569/0949/files/Museo-700.woff?v=1738041464') format('woff');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
}

.h1, .h2, .h3, .h4, .h5, .h6, h1, h2, h3, h4, h5, h6 {
    font-family: 'Museo 700' !important;
}
body, button, input, select, textarea, p,a  {
    font-family: 'Museo 300' !important;
}

.products-toolbar__compare {
  visibility: hidden !important;
}
.card_swatch.cust-variant-swatches a {
    max-width: 25px;
    max-height: 25px;
    padding: 1px;
}

.cust-variant-swatches.circle_swatch.card_swatch {
    gap: 4px;
    margin-top: 5px;
}
@media (max-width: 768.98px) {
  .card__info p.card__title {
    font-size: 14px;
  }
   .main-products-grid[data-layout=grid] .grid-cols-2 .card .card__media {
    margin: -10px;
    margin-top: -16px;
  }
}