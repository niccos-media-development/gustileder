/********** UPDATED FONT FAMILY************/

@font-face {
    font-family: 'Museo 300';
    src: url('https://cdn.shopify.com/s/files/1/0907/0569/0949/files/Museo-300.woff2?v=1738041463') format('woff2'),
        url('https://cdn.shopify.com/s/files/1/0907/0569/0949/files/Museo-300.woff?v=1738041463') format('woff');
    font-weight: 300;
    font-style: normal;
    font-display: swap;
}

@font-face {
    font-family: 'Museo 700';
    src: url('https://cdn.shopify.com/s/files/1/0907/0569/0949/files/Museo-700.woff2?v=1738041464') format('woff2'),
        url('https://cdn.shopify.com/s/files/1/0907/0569/0949/files/Museo-700.woff?v=1738041464') format('woff');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
}

.h1, .h2, .h3, .h4, .h5, .h6, h1, h2, h3, h4, h5, h6 {
    font-family: 'Museo 300' !important;
}
body, button, input, select, textarea, p,a  {
    font-family: 'Museo 300' !important;
}

.products-toolbar__compare {
  visibility: hidden !important;
}
.card_swatch.cust-variant-swatches a {
    max-width: 18px;
  min-width: 18px;
    max-height: 18px;
    padding: 1px;
      border: 0;
}
.card_swatch.cust-variant-swatches a img {

    aspect-ratio: 1 / 1;
}
.cust-variant-swatches.circle_swatch.card_swatch {
    gap: 4px;
    margin-top: 5px;
}
.card__info .price.price--bottom {
    padding-top: 0px !important;
}
.card-link:after {
    position: relative;
}
/*  */
.cust-variant-slider-container {
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
}

.cust-variant-slider-container .cust-variant-swatches {
  display: flex;
  transition: transform 0.3s ease;
      flex-wrap: nowrap;
    width: 100%;
}



button.cust-slider-prev,
button.cust-slider-next {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  border: none;
  padding: 10px;
  cursor: pointer;
  z-index: 10;
}
button.cust-slider-prev[disabled],button.cust-slider-next[disabled] {
    display: none;
}
button.cust-slider-prev {
  left: 0;
}

button.cust-slider-next {
  right: 0;
}
.slider__grid .card__media img {
    /* object-fit: cover; */
}
.cc-collection-banner.section--template {
    margin: 20px auto 20px;
}
.cc-collection-products.section--template {
    margin: 0 !important;
}
@media (max-width: 768.98px) {
  .card__info .price__current {
    font-size: 14px;   font-weight: 500;
  }
  .main-products-grid[data-layout=grid] .grid-cols-2 .card  {
    padding: 0 !important;
  }
   .main-products-grid[data-layout=grid] .grid-cols-2 .card .card__info {
    padding: 0 16px 16px;
  }
      .main-products-grid[data-layout=grid] .grid-cols-2>li {
        border: unset !important;
    }
   .main-products-grid__results>.grid{
    gap: 2px !important;
  }
