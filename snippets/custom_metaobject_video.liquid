{% if product.metafields.custom.description_video_details %}
  <div class="cust-video-details-list">
    {% for video_detail in product.metafields.custom.description_video_details.value %}
      <div class="cust-video-detail-item">
        {% if video_detail.image != blank %}
          <img src="{{ video_detail.image | img_url: "small" }}" alt="{{ video_detail.image.alt }}" class="cust-video-detail-item__image">
        {% endif %}

        {% if video_detail.content != blank %}
          <div class="cust-video-detail-item__content">
            {{ video_detail.content }}
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
{% endif %}
